/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    environment {
        VM_DIR = 'C:/'
        VM_USER = 'Administrator'
        VM_HOST = '10.210.64.63'
    }

    stages {
        stage('Build') {
            steps {
                echo 'hello build'
            }
        }

        stage('Display what is found in the c directory'){
            steps {
                sh """
                scp $VM_USER@$VM_HOST:$VM_DIR
                dir
                """
            }
        }
    }
}
