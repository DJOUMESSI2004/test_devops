/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any
    tools {
        nodejs 'Node-23-11-0'
    }

    environment {
        VM_DIR = 'C:/'
        VM_USER = 'Administrator'
        VM_HOST = '10.210.64.63'
    }

    stages {

        stage('clean directory'){
            steps {
                deleteDir()
            }
        }
        stage('Clone repository'){
            steps {
                git 'https://github.com/DJOUMESSI2004/test_devops.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                echo 'hello build'
            }
        }

        stage('pakage project'){

            steps{
                sh '''
                cd dist
                zip -r ../app.zip .
                '''
                echo 'ziped the project'
            }

        }

        stage('copy app.zip in vm'){
            steps {
                sh """
                scp app.zip $VM_USER@$VM_HOST:C:/test
                """
                echo 'successfully copied !'
            }
        }

        stage('Display what is found in the c directory'){
            steps {
                sh """
                ssh $VM_USER@$VM_HOST
                """
                echo 'good connection'
                sh 'dir'
            }
        }

       stage('deply app'){
        steps {
            sh """
            ssh $VM_USER@$VM_HOST Powershell command
                "\\\$ProgressPreferences = 'SilentlyContinue'; Expand-Archive -Path 'C:\\\\test\\\\app.zip' -DestinationPath 'C:\\\\test\\\\Final' -force"
            """
        }
       }
    }
}
